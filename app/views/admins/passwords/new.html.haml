.container
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          %h1.panel-title Forgot your password?
        .panel-body
          = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = devise_error_messages!
            = f.email_field :email, autofocus: true
            %p= f.submit 'Send me reset password instructions'
          %p= render 'admins/shared/links'
