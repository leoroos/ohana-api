%dl.dl-horizontal
  %dt= Organization.human_attribute_name :id
  %dd= organization.id
  %dt= Organization.human_attribute_name :name
  %dd= organization.name
  %dt= Organization.human_attribute_name :urls
  %dd
    %ul.list-unstyled
      - organization.urls.each do |url|
        %li= link_to url, url
  %dt= Organization.human_attribute_name :slug
  %dd= organization.slug
  %dt= Organization.human_attribute_name :created_at
  %dd= l organization.created_at
  %dt= Organization.human_attribute_name :updated_at
  %dd= l organization.updated_at
  %dt= Organization.human_attribute_name :aasm_state
  %dd= t organization.aasm_state
  %dt= Organization.human_attribute_name :aasm_state_notes
  %dd= organization.aasm_state_notes
